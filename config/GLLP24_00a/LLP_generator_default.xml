<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- The main tool to define a single LLP. -->
<!-- Work in progress. -->

<!-- Author : John Plows [kjplows \at liverpool.ac.uk] -->

<alg_conf>

  <param_set name="Default">

    <!-- Some details about this parameter set -->
    <param type="string" name="Details"> A default set for LLP production and decay modes </param>

    <!-- Specify a vector of ModeObject data for production  -->
    <productionModes>

      <!-- Specify the LLP masses to interpolate scores -->
      <param type="vec-double" name="Masses" delim=";">
	0.000; 0.050; 0.100; 0.150; 0.200; 0.250; 0.300; 0.350; 0.375; 0.400
      </param>

      <!-- K+ -> X + mu+ -->
      <modeObject name="KPToMuP">
	<param type="vec-double" name="Scores" delim=";">
	  0.800; 0.740; 0.680; 0.620; 0.560; 0.500; 0.440; 0.380; 0.100; 0.000
	</param>

	<!-- Always specify parent first -->
	<param type="vec-int" name="PDGList" delim=";">
	  321 ; 2000022022 ; -13
	</param>
      </modeObject>

      <!-- K+ -> X + e+ -->
      <modeObject name="KPToEP">
	<param type="vec-double" name="Scores" delim=";">
	  0.200; 0.260; 0.320; 0.380; 0.440; 0.500; 0.560; 0.620; 0.900; 1.000
	</param>

	<!-- Always specify parent first -->
	<param type="vec-int" name="PDGList" delim=";">
	  321 ; 2000022022 ; -13
	</param>
      </modeObject>

    </productionModes>

    <!-- Specify a vector of ModeObject data for decays  -->
    <decayModes>
      
      <!-- Specify the LLP masses to interpolate scores -->
      <param type="vec-double" name="Masses" delim=";">
	0.000; 0.212; 0.250; 0.275; 0.300; 0.325; 0.350; 0.375; 0.400
      </param>

      <!-- X -> v + e+ + e- -->
      <modeObject name="ToNuEPEM">
	<param type="vec-double" name="Scores" delim=";">
	  1.000; 0.999; 0.950; 0.910; 0.840; 0.730; 0.500; 0.255; 0.000
	</param>

	<param type="vec-int" name="PDGList" delim=";">
	  2000022022 ; 12 ; -11 ; 11
	</param>
      </modeObject>

      <!-- X -> v + mu+ + mu- -->
      <modeObject name="ToNuMPMM">
	<param type="vec-double" name="Scores" delim=";">
	  0.000; 0.001; 0.050; 0.090; 0.160; 0.270; 0.500; 0.745; 1.000
	</param>

	<param type="vec-int" name="PDGList" delim=";">
	  2000022022 ; 14 ; -13 ; 13
	</param>
      </modeObject>

    </decayModes>

  </param_set>

</alg_conf>
