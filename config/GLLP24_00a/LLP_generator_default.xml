<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- The main tool to define a single LLP. -->
<!-- Work in progress. -->

<!-- Author : John Plows [kjplows \at liverpool.ac.uk] -->

<alg_conf>

  <param_set name="Default">
    <!-- Some details about this parameter set -->
    <param type="string" name="Details"> A default set for LLP production and decay modes </param>

    <!-- Specify a vector of ModeObject data for production  -->
    <productionModes>

      <!-- Specify the LLP masses to interpolate scores -->
      <param type="vec-double" name="Masses" delim=";">
	0.000; 0.100; 0.400; 1.000
      </param>

      <!-- K+ -> X + mu+ -->
      <modeObject name="KPToMuP">
	<param type="vec-double" name="Scores" delim=";">
	  0.800 ; 0.700 ; 0.050 ; 0.000
	</param>

	<!-- Always specify parent first -->
	<param type="vec-int" name="PDGList" delim=";">
	  321 ; 2000022022 ; -13
	</param>
      </modeObject>

      <!-- pi+ -> X + e+ -->
      <modeObject name="PiPToEP">
	<param type="vec-double" name="Scores" delim=";">
	  0.190 ; 0.010 ; 0.000 ; 0.000
	</param>

	<!-- Always specify parent first -->
	<param type="vec-int" name="PDGList" delim=";">
	  211 ; 2000022022 ; -11
	</param>
      </modeObject>

      <!-- D+ -> X + mu+ -->
      <modeObject name="DPToMuP">
	<param type="vec-double" name="Scores" delim=";">
	  0.010 ; 0.290 ; 0.950 ; 1.000
	</param>

	<!-- Always specify parent first -->
	<param type="vec-int" name="PDGList" delim=";">
	  411 ; 2000022022 ; -13
	</param>
      </modeObject>

    </productionModes>

    <!-- Specify a vector of ModeObject data for decays  -->
    <decayModes>
      
      <!-- Specify the LLP masses to interpolate scores -->
      <param type="vec-double" name="Masses" delim=";">
	0.000; 0.100; 0.400; 1.000
      </param>

      <!-- X -> v + e+ + e- -->
      <modeObject name="ToNuEPEM">
	<param type="vec-double" name="Scores" delim=";">
	  1.000; 1.000 ; 0.600 ; 0.200
	</param>

	<param type="vec-int" name="PDGList" delim=";">
	  2000022022 ; 12 ; -11 ; 11
	</param>
      </modeObject>

      <!-- X -> v + mu+ + mu- -->
      <modeObject name="ToNuMuPMuM">
	<param type="vec-double" name="Scores" delim=";">
	  0.000; 0.000 ; 0.150 ; 0.180
	</param>

	<param type="vec-int" name="PDGList" delim=";">
	  2000022022 ; 14 ; -13 ; 13
	</param>
      </modeObject>

      <!-- X -> pi+ + mu- -->
      <modeObject name="ToPiPMuM">
	<param type="vec-double" name="Scores" delim=";">
	  0.000 ; 0.000 ; 0.250 ; 0.620
	</param>

	<param type="vec-int" name="PDGList" delim=";">
	  2000022022 ; 211 ; 13
	</param>
      </modeObject>

    </decayModes>

  </param_set>

</alg_conf>
