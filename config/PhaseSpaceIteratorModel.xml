<?xml version="1.0" encoding="ISO-8859-1"?>

<alg_conf>

<!--
Configuration for the Phase space Iterator model
This is a "bogus" nuclear model that just generates nucleons at certain (pN, Eb)

Configurable Parameters:
...................................................................................................................
Name                      Type        Optional   Comment                                       Default
...................................................................................................................
FermiMomentumTable        string      No         Table of Fermi momentum (kF) constants        CommonParam[FermiGas]  

NucleonMomentumRange      vec-double  No         Nucleon momentum (min, max) (GeV/c)           
BindingEnergyRange        vec-double  No         Binding energy   (min, max) (MeV)             
NucleonMomentumBins       int         Yes        How many pN points to simulate                100
BindingEnergyBins         int         Yes        How many Eb points to simulate                100
-->

  <param_set name="Default"> 
    <param type="string" name="CommonParam"> FermiGas </param>

    <param type="vec-double" name="NucleonMomentumRange" delim=","> 0.0, 0.5 </param> <!-- GeV/c -->
    <param type="vec-double" name="BindingEnergyRange" delim=","> 0.0, 100.0 </param> <!-- GeV/c -->
    <param type="int" name="NucleonMomentumBins"> 50 </param>
    <param type="int" name="BindingEnergyBins"> 80 </param>
  </param_set>

</alg_conf>
